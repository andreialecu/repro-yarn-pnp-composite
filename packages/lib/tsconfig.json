{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declarationMap": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "types": ["node"],
    "importHelpers": true
  },
  "include": ["./src/**/*", "./src/**/*.json"]
}
